						locallist.visible = true;
						loginuser.text = "当前登陆者："+inputUserName.text+"";
						loginusernetusername.text = data[0].server_username;
					}
					else
					{
						Alert.show("用户名或密码错误");
					}
					for (var i:int =0; i < dao.daoitems.length; ++i) {
