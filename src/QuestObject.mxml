<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" horizontalAlign="left">

	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.core.UIComponent;
			import mx.events.ItemClickEvent;
			public var _answer:Object ;
			public static var num:String ;
			public static var sid2:String ;
			public static var objs:Array = new Array();
			public var allOptions :Object ;
			public static var allAnswer:Object;
			
			public function set questdata(val:*):void
			{
				tmsm1.text = val.tmsms;
				qnum1.text = String(val.num+1);
				question1.text = val.quests;
				sid3.text = val.sid1;
			}
			
			public function set optiondata(val:*):void
			{			
				allOptions = val;				
			}
			public function set everyOption(val:*):void
			{
				if(allOptions != null)
				{
					var n:int = allOptions.num;
					for(var z:int = 0 ; z<n　; z++)
					{
						var option :OneOption = new OneOption();
						var opid:String = (allOptions.ar[z]);
						var nameid:String = (allOptions.list[z]);
						var questid:String = (allOptions.qstid);
						if( allAnswer != null )
						{
							var zlen:int = allAnswer.length;
							
							for(var r:int = 0 ; r<zlen ; r++)
							{						
								if( (opid == allAnswer[r].answersid) && (questid == allAnswer[r].questid) && (allOptions.cname == allAnswer[r].evalobjname)  )
								{
									option.foroption.selected = true;
								}
							}
						}
						option.quest = quest;
						option.optiondata = {evalobjname:allOptions.evalobjname , all:n , n:z , opid:opid , nameid:nameid , questid:questid}
						options.addElement(option);
						if(allOptions.bool == 0)
						{
							option.foroption.visible = false;
						}
						else
						{
							option.foroption.visible = true;
						}
					}
				}
			}
			public function set optall(val1:*):void
			{				
				this._answer = objs;
			}
			
			public function get optall():Object
			{			
				for(var l:int = 0 ; l<objs.length ; l++)
				{
					objs.pop();
				}
				return _answer;
			}

			public function findThis( sid:String):int
			{
				for(var i:int =0 ; i < objs.length ; i++)
				{
					
					if(objs[i].sid==sid)
					{
						return i;
					}
				}
				return -1;
			}
		]]>
	</fx:Script>
	
